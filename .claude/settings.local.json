{
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "NotebookEdit"
    ],
    "deny": [],
    "ask": []
  },
  "env": {
    "CLAUDE_TONE": "casual_direct_fr",
    "CLAUDE_WORKFLOW": "emergence_codev",
    "CLAUDE_SYNC_FILE": "AGENT_SYNC.md",
    "CLAUDE_CUSTOM_INSTRUCTIONS_PATH": ".claude/instructions/style-fr-cash.md"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/inject-style.js"
          }
        ]
      }
    ]
  }
}