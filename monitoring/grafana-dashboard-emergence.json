{
  "dashboard": {
    "title": "Emergence - Monitoring Production",
    "tags": ["emergence", "monitoring", "production"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Requests Per Minute",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m]) * 60",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yaxis": {"label": "req/min"}
      },
      {
        "id": 2,
        "title": "Error Rate %",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(http_errors_total[5m]) / rate(http_requests_total[5m]) * 100"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 1, "color": "yellow"},
          {"value": 5, "color": "red"}
        ]
      },
      {
        "id": 3,
        "title": "Response Time P95",
        "type": "graph",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "yaxis": {"label": "seconds"}
      },
      {
        "id": 4,
        "title": "Failed Login Attempts",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "failed_login_attempts_total"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 10, "color": "yellow"},
          {"value": 50, "color": "red"}
        ]
      },
      {
        "id": 5,
        "title": "SQL Injection Attempts",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sql_injection_attempts_total"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 1, "color": "red"}
        ]
      },
      {
        "id": 6,
        "title": "XSS Attempts",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "xss_attempts_total"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 1, "color": "red"}
        ]
      },
      {
        "id": 7,
        "title": "Rate Limited Requests",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate_limit_exceeded_total"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 100, "color": "yellow"},
          {"value": 1000, "color": "red"}
        ]
      },
      {
        "id": 8,
        "title": "AI Response Time (avg)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "avg(ai_response_duration_seconds)",
            "legendFormat": "{{provider}}"
          }
        ],
        "yaxis": {"label": "seconds"},
        "thresholds": [
          {"value": 5, "color": "yellow"},
          {"value": 10, "color": "red"}
        ]
      },
      {
        "id": 9,
        "title": "AI Timeouts",
        "type": "stat",
        "gridPos": {"x": 12, "y": 12, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "ai_timeout_total"
          }
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 1, "color": "red"}
        ]
      },
      {
        "id": 10,
        "title": "Slow Queries (>1s)",
        "type": "table",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "topk(10, slow_queries_total)",
            "format": "table"
          }
        ]
      },
      {
        "id": 11,
        "title": "Top Endpoints by Traffic",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 12,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"x": 12, "y": 28, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "active_users_total"
          }
        ]
      },
      {
        "id": 13,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 18, "y": 28, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "yaxis": {"label": "MB"}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m"]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "deployment_timestamp",
          "iconColor": "blue"
        }
      ]
    }
  }
}
